<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat_regular</item>

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorBlack</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorBlack</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.DayNight" parent="Theme.AppCompat.DayNight">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Page title -->
    <style name="tv_page_title_small">parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_page_title_medium">parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tv_page_title_large">parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Page title Below -->
    <style name="tv_page_title_below_small">parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_page_title_below_medium">parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_page_title_below_large">parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Story title -->
    <style name="tv_news_title_small">parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_news_title_medium">parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv_news_title_large">parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Story Content -->
    <style name="tv_news_content_small">parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="tv_news_content_medium">parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_news_content_large">parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Bottomsheet -->
    <style name="ActionItem">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>


    <style name="bottom_sheet_item">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/progress_image_theme</item>
    </style>
    <style name="CustomSwitchTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorBlack</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#757575</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/colorAppMainColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
<!--        <item name="android:background">@color/colorAppMainColor</item>-->
    </style>
</resources>
