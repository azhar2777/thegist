<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <stroke android:width="1dp"

                android:color="@color/selected_text_sizebtn">

            </stroke>

            <corners android:radius="4dp" />

            <solid android:color="@color/selected_text_sizebtn" />
        </shape>

    </item>

    <item><shape>
        <stroke android:width="1dp" android:color="@color/selected_text_sizebtn" />

        <solid android:color="@color/selected_text_sizebtn" />
        <corners android:radius="4dp" />

    </shape></item>

</selector>
